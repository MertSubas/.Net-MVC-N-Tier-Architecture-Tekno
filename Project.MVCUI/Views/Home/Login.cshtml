@model AppUserVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="YZL3157">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>RegisterNow</title>

    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/OuterTools/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />

</head>
<body class="login-body">
    <div class="container">





        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {


            <br /> <center><h2>Giriş Yapınız</h2></center>

            <center> <h5 style="color:red">@TempData["HesapAktifMi"]    @ViewBag.Kullanici</h5>        </center>
            <div class="login-wrap">
                @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control", placeholder = "Şifre" })




                <br />

                <button class="btn btn-primary">Giriş Yap</button>

                <div>
                    @Html.ActionLink("Kayıt Ol", "RegisterNow", "Register")
                </div>

            </div>

        }



    </div>
</body>
</html>